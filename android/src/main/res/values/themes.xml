<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NetposContactlessSdkJava" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomDialogStyle" parent="Theme.AppCompat.Dialog">
        <!-- Customize the background color of the dialog -->
        <item name="android:windowBackground">@android:color/white</item>

        <!-- Customize the text color of the dialog -->
        <item name="android:textColorPrimary">@color/black</item>

        <!-- Add more customizations as needed -->
    </style>
</resources>